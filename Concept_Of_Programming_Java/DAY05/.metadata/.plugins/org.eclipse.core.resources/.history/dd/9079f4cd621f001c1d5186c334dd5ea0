package sunbeam;


//Requirement , We donot want to create instance of class 
// without creating instance of class , we wish to call sum() 


//Rule : static functions can give a call to static function directly
public class Day5_6
{
	public void static sum(int a,int b) // non static 
	{
		System.out.println("Addition = "+(a+b));
	}
	public static void main(String[] args)  // static 
	{
		sum(50,30);

	}

}



